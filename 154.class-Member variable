class Animal(object):
  """Makes cute animals."""
  is_alive = True
  health = "good"
  def __init__(self, name, age):
    self.name = name
    self.age = age
  # Add your method here!
  def description(self):
    print self.name
    print self.age
    
hippo = Animal("Anderson", 36)
hippo.description()
sloth = Animal("Peterson",30)
ocelot = Animal("grandson",20)
print hippo.health
print sloth.health
print ocelot.health




