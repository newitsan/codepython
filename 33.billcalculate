def tax(bill):
  """Adds 8% tax to a restaurant bill."""
  bill = bill*1.08
  print "With tax: %f" % bill
  return bill

def tip(bill):
  """Adds 15% tip to a restaurant bill."""
  bill *= 1.15
  print "With tip: %f" % bill
  return bill
  
meal_cost = float(raw_input("Enter the bill value:"))
meal_with_tax = tax(meal_cost)
meal_with_tip = tip(meal_with_tax)


#Output: Enter the bill value:100
        #With tax: 108.000000
        #With tip: 124.200000
